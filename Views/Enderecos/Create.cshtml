@model Register_with_address.Models.Endereço

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h4>Endereço</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <label for="Cep"></label>
                    <input class="form-control" name="Cep" value=@ViewData["Cep"] />
                </div>
            <button type="submit" class="btn btn-primary">Auto complete</button>
        </form>
        <form asp-action="Create">

            <div class="form-group">
                <label asp-for="Morador" class="control-label"></label>
                <input asp-for="Morador" class="form-control" />
                <span asp-validation-for="Morador"></span>
            </div>

            <div class="form-group"> 
                <label asp-for="Logradouro" class="control-label" ></label>
                <input asp-for="Logradouro" class="form-control" value=@ViewData["Logradouro"] /> 
                <span asp-validation-for="Logradouro"></span>
            </div>

            <div class="form-group">
                <label asp-for="Numero" class="control-label" ></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Complemento" class="control-label"></label>
                <input asp-for="Complemento" class="form-control" value=@ViewData["Complemento"] />
                <span asp-validation-for="Complemento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Bairro" class="control-label" ></label>
                <input asp-for="Bairro" class="form-control" value=@ViewData["Bairro"] />
                <span asp-validation-for="Bairro"></span>
            </div>

            <div class="form-group">
                <label asp-for="Localidade" class="control-label" ></label>
                <input asp-for="Localidade" class="form-control" value=@ViewData["Localidade"] />
            </div>

            <div class="form-group">
                <label asp-for="Uf" class="control-label" ></label>
                <input asp-for="Uf" class="form-control" value=@ViewData["Uf"] />
            </div>

            <input asp-for="Cep" type="hidden" default-value="@ViewData["Cep"]"/>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="hidden" asp-route-id=""/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
